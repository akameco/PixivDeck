{
  "presets": [
    [
      "env",
      {
        "targets": { "node": 6 },
        "useBuiltIns": true,
      },
    ],
    "react",
    "stage-0",
  ],
  "plugins": [
    "add-module-exports",
    [
      "react-intl-auto",
      {
        "removePrefix": "app/",
      },
    ],
  ],
  "env": {
    "production": {
      "plugins": ["babel-plugin-dev-expression"],
    },
    "development": {
      "plugins": [
        "transform-class-properties",
        "transform-es2015-classes",
        "react-hot-loader/babel",
      ],
    },
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"],
    },
  },
}
