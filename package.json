{
  "name": "PixivDeck",
  "productName": "PixivDeck",
  "version": "0.12.1",
  "description": "pixiv client for desktop",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron -r babel-register -r babel-polyfill main.development.js",
    "watch": "cross-env NODE_ENV=development webpack-dev-server --hot --inline --progress --colors --port 3000",
    "build:r": "cross-env NODE_ENV=production webpack --config webpack.config.production.js --progress --colors",
    "build:m": "cross-env NODE_ENV=production webpack --config webpack.config.electron.js --progress --colors",
    "build": "npm run build:r && npm run build:m",
    "pack:macos": "node pack.js macos",
    "pack:windows": "node pack.js windows",
    "pack:linux": "node pack.js linux",
    "pack": "npm run pack:macos && npm run pack:windows && npm run pack:linux",
    "zip:macos": "cd release/PixivDeck-darwin-x64 && zip -ryXq9 ../PixivDeck-macos-${npm_package_version}.zip PixivDeck.app",
    "zip:windows": "cd release/PixivDeck-win32-ia32 && zip -ryq9 ../PixivDeck-windows-${npm_package_version}.zip *",
    "zip:linux": "cd release/PixivDeck-linux-x64 && zip -ryq9 ../PixivDeck-linux-${npm_package_version}.zip *",
    "zip": "npm run zip:macos && npm run zip:windows && npm run zip:linux",
    "release": "rm -fr release && npm run build && npm run pack && npm run zip",
    "test": "npm run prettier && npm run jest",
    "jest": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "flow": "flow check",
    "prettier": "prettier --write --no-bracket-spacing --single-quote --jsx-bracket-same-line --trailing-comma all --print-width 80 \"app/**/!(third_party)/*.js\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"app/components/**/*.js\""
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": "stylelint-config-standard",
    "syntax": "scss",
    "rules": {
      "indentation": [
        "tab"
      ],
      "rule-empty-line-before": null,
      "at-rule-empty-line-before": null
    }
  },
  "keywords": [
    "electron",
    "pixiv"
  ],
  "author": "akameco <akameco.t@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "autolinker": "^1.4.1",
    "babel-polyfill": "^6.22.0",
    "camelcase-keys": "^4.0.0",
    "electron-config": "^0.2.1",
    "electron-context-menu": "^0.8.0",
    "electron-debug": "^1.1.0",
    "electron-dl": "^1.6.0",
    "electron-referer": "^0.3.0",
    "keycode": "^2.1.8",
    "lodash.debounce": "^4.0.8",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.0",
    "lodash.throttle": "^4.1.1",
    "lodash.union": "^4.6.0",
    "lodash.unionby": "^4.8.0",
    "material-ui": "^0.17.0",
    "normalizr": "^3.1.0",
    "pify": "^2.3.0",
    "pixiv-app-api": "^0.10.0",
    "pre-commit": "^1.2.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-event-listener": "^0.4.1",
    "react-intl": "^2.2.3",
    "react-redux": "^5.0.2",
    "react-sortable-pane": "^0.5.4",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-saga": "^0.14.3",
    "residual-scroll-top": "^0.1.0",
    "styled-components": "^1.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-1": "^6.22.0",
    "babel-register": "^6.23.0",
    "cross-env": "^3.1.4",
    "del": "^2.2.2",
    "devtron": "^1.4.0",
    "electron": "^1.4.15",
    "electron-devtools-installer": "^2.0.1",
    "electron-packager": "^8.5.1",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.14.0",
    "eslint-config-prettier": "^1.5.0",
    "eslint-config-xo": "^0.17.0",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^2.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.44.0",
    "hard-rejection": "^1.0.0",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.4.0",
    "prettier": "^0.22.0",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "redux-logger": "^2.7.4",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.0.4",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-merge": "^2.4.0"
  }
}
